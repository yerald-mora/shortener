@page
@model Account.LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nativo Shortener</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
    <div class="col-md-10 mx-auto col-lg-5 py-lg-5">
        <form class="p-4 p-md-5 border rounded-3 bg-light" method="post">
            <div class="form-floating mb-3">
                <input type="text" asp-for="Login.UserName" class="form-control" id="floatingInput" placeholder="User Name" value="ymora">
                <label for="floatingInput">User Name</label>
            </div>
            <div class="form-floating mb-3">
                <input type="password" asp-for="Login.Password" class="form-control" id="floatingPassword" placeholder="Password" value="La password 1#">
                <label for="floatingPassword">Password</label>
            </div>
            <button class="w-100 btn btn-lg btn-primary" type="submit">Sign In</button>
            <hr class="my-4">
        </form>
    </div>

</body>
</html>

